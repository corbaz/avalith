          <div class="card text-center">
            <div class="card-header">
              <h3 class="m-0 tinta">
                {{title}}
              </h3>
            </div>
            <div class="card-body">
              <form action="employee/alta" method="POST">
                <div class="form-group">
                  <label for="employee_email" class="tinta" style="float: left;">
                    Email:
                  </label>
                  <input
                    type="email"
                    name="employee_email"
                    id=""
                    class="form-control text-lowercase"
                    placeholder="Ingrese su Email. - Ej:  xxxxx@gmail.com."
                    autofocus
                  />
                </div>
                <div class="form-group">
                  <label for="employee_pass" class="tinta" style="float: left;">
                    Password:
                  </label>
                  <input required 
                    type="password"
                    name="employee_pass"
                    class="form-control text-lowercase"
                    title="Ingrese su Password Mín: 8 / Max: 20 caracteres"
                    placeholder="Ingrese su Password Mín: 8 / Max: 20 caracteres"
                    pattern="[a-z0-9]{8,20}"
                  />
                </div>
                {{> employee/employee_footer}}
              </form>
            </div>
          </div>