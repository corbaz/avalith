<main
  id={{id}}
  class="masthead"
  style="background-image:url('/img/intro-bg.jpg');"
>
  <div class="intro-body">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto">
					<div class="card text-center">
						<div class="card-header">
							<h3 class="m-0 tinta">
								{{title}}
							</h3>
						</div>
						<div class="card-body">{{!Formulario de Employee}}
							<form method="POST"
								action="/employee/modificacion/{{registro._id}}?_method=PUT"
								enctype="application/x-www-form-urlencoded">
									<input type="hidden" name="_method" value="PUT">
									{{>employee/employee_formulario_registrar}}
									{{>employee/employee_footer}}
							</form>
						</div>
					</div>
        </div>
      </div>
    </div>
  </div>
</main>
